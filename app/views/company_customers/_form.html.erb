<%= form_for @customer do |f|%>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :fantasy_name %>
    <%= f.text_field :fantasy_name, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :email  %>
    <%= f.text_field :email, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :cnpj  %>
    <%= f.text_field :cnpj, class:'form-control', maxlength:'18' %>
  </div>
  <div class="form-group">
    <%= f.label :phone %>
    <%= f.text_field :phone, class:'form-control' %>
  </div>
  <%= f.submit "Salvar cliente", class: 'btn btn-primary' %>
  <%= link_to 'Cancelar', root_path, class:"btn btn-outline-danger" %>
<% end %>
